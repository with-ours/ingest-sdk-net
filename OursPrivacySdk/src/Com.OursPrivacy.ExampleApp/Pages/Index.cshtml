@page
@model IndexModel
@{
    ViewData["Title"] = "OursPrivacy Example";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
</head>

<body>
    <div class="container mt-5">
        <h1 class="mb-4">OursPrivacy Example App</h1>
        <form method="post" asp-page-handler="Identify" class="mb-4">
            @Html.AntiForgeryToken()
            <h2>Identify</h2>
            <div class="mb-3">
                <label for="userId" class="form-label">User ID</label>
                <input id="userId" name="userId" class="form-control" required />
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input id="email" name="email" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">Identify</button>
        </form>
        <form method="post" asp-page-handler="Track">
            @Html.AntiForgeryToken()
            <h2>Track</h2>
            <div class="mb-3">
                <label for="trackUserId" class="form-label">User ID</label>
                <input id="trackUserId" name="userId" class="form-control" required />
            </div>
            <div class="mb-3">
                <label for="trackEventName" class="form-label">Event Name</label>
                <input id="trackEventName" name="eventName" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-success">Track</button>
        </form>
    </div>
</body>

</html>